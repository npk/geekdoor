<% @user.geekdoors.each_slice(5) do |door_list| %>
  <ul class="door">
    <% door_list.each do |door| %>
      <li class="door_link">
        <% if current_user %>
          <%= link_to "Delete", geekdoor_path(door), :method => "delete",
                                              :class => "delete_door" %>
        <% end %>
          
        <span class="door_name"><%= door.name %></span>
          <span class="btn hotkey">Ctrl</span> + <span class="btn hotkey"><%= door.hotkey.upcase %></span>
          
        <%= submit_tag door.hotkey, :class => "door_submit" %>        
      </li>
    <% end %>
  </ul>  
<% end %>